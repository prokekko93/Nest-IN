<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddPhotoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/scattaPhoto"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:onClick="addPhoto"
                android:text="@string/scatta_foto" />

            <Button
                android:id="@+id/takePhoto"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:onClick="takePhoto"
                android:text="@string/scegli_foto" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:padding="4dp" />

            <EditText
                android:id="@+id/titlePhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:hint="Titolo"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/descriptionPhoto"
                android:layout_width="match_parent"
                android:layout_height="99dp"
                android:ems="10"
                android:gravity="top|start"
                android:hint="Descrizione"
                android:importantForAutofill="no"
                android:inputType="textCapSentences|textMultiLine"
                android:lines="5"
                android:maxLength="100"
                android:padding="6dp"
                android:singleLine="false"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Permetti a tutti di visualizzare la tua foto" />

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="upload"
                android:text="Carica foto" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>